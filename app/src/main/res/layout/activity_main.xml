<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/tvTotalBalance"
            android:layout_width="281dp"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="19dp"
            android:clickable="true"
            android:text="Total Balance"
            android:textAlignment="center"
            android:textAllCaps="false"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etTotalBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="63dp"
            android:inputType="textPersonName"
            android:text="100.00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:textStyle="bold" />


    <android.support.v7.widget.CardView
        android:id="@+id/cvAmountDetails"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvAddAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="Add Transaction Details"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rlAddAmountDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/chkIncome"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="39dp"
                android:text="Income" />


            <ImageView
                android:id="@+id/ivDatePopup"
                android:layout_width="30dp"
                android:layout_height="39dp"
                android:layout_alignTop="@+id/chkIncome"
                android:layout_toStartOf="@+id/etDate"
                android:background="@android:color/transparent"
                android:contentDescription="AddDate"
                app:srcCompat="@drawable/ic_date" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/chkIncome"
                android:layout_marginEnd="34dp"
                android:ems="10"
                android:inputType="date"
                android:text="Select Date"
                android:textAlignment="center"
                android:textSize="11sp"/>


            <CheckBox
                android:id="@+id/ChkExpense"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/chkIncome"
                android:layout_centerVertical="true"
                android:checked="true"
                android:text="Expense" />


            <TextView
                android:id="@+id/tvAmtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ivDatePopup"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:text="Source\nType"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spAmtSourceType"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:background="@color/colorAccent"
                android:text="Select SourceType" />

            <ImageView
                android:id="@+id/ivCurrencyIcon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignStart="@+id/ChkExpense"
                android:layout_alignTop="@+id/etTransationAmount"
                android:background="@android:color/transparent"
                android:contentDescription="AddTransaction"
                android:src="@mipmap/ic_currency_round"
                android:textAlignment="center" />


            <EditText
                android:id="@+id/etTransationAmount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="26dp"
                android:layout_marginStart="104dp"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:text="0.00"
                android:textAlignment="viewStart"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/ivAddTransaction"
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/etTransationAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp"
                android:background="@android:color/transparent"
                android:contentDescription="AddTransaction"
                android:textAlignment="center"
                app:srcCompat="@drawable/ic_add" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
