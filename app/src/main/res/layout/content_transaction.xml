<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/relative_list">
        <!--
        items for a single row of RecyclerView
        -->


        <TextView
            android:id="@+id/transId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="cash"
            android:textAllCaps="true"
            android:textColor="#350808"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="invisible"
           />


        <TextView
            android:id="@+id/amountsourcetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="cash"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="italic"
            android:paddingLeft="25dp"/>

        <TextView
            android:id="@+id/transactiontype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:layout_alignParentEnd="true"
            android:text="expense"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#0d10a7"
            android:textSize="15sp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="1000"
            android:textColor="#0e33da"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/amountsourcetype"
            android:text="Category"
            android:textColor="#000"
            android:textSize="12sp"
            android:paddingLeft="25dp"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCategory"
            android:layout_alignParentStart="true"
            android:text="Description"
            android:textColor="#000"
            android:textSize="12sp"
            android:paddingLeft="25dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transactiontype"
            android:layout_alignParentEnd="true"
            android:inputType="date"
            android:text="12/1/2018"
            android:textColor="#360489"
            tools:ignore="TextViewEdits"
            android:textStyle="bold"
            android:paddingRight="25dp"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>